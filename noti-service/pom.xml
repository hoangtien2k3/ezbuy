<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.ezbuy.platform</groupId>
		<artifactId>ezbuy</artifactId>
		<version>1.0-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<artifactId>noti-service</artifactId>
	<version>1.0-SNAPSHOT</version>
	<name>noti-service</name>
	<description>noti-service</description>

	<properties>
		<java.version>21</java.version>
		<kotlin.version>1.9.25</kotlin.version>
		<revision>1.0-SNAPSHOT</revision>
		<keycloak.version>25.0.2</keycloak.version>
		<ezbuy-notification-service.tag>latest</ezbuy-notification-service.tag>
		<ezbuy-notification-service.image>hoangtien2k3/ezbuy-notification-service</ezbuy-notification-service.image>
		<spring-cloud.version>2023.0.1</spring-cloud.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.springframework.cloud</groupId>
				<artifactId>spring-cloud-dependencies</artifactId>
				<version>${spring-cloud.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<!-- internal dependencies-->
		<dependency>
			<groupId>io.github.hoangtien2k3</groupId>
			<artifactId>reactify-core</artifactId>
			<version>1.3.0</version>
		</dependency>
		<dependency>
			<groupId>com.ezbuy.platform</groupId>
			<artifactId>noti-model</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<!--Send mail with thymeleaf-->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-mail</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-thymeleaf</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.cloud</groupId>
			<artifactId>spring-cloud-starter-netflix-eureka-client</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>com.google.cloud.tools</groupId>
				<artifactId>jib-maven-plugin</artifactId>
				<version>3.4.6</version>
				<configuration>
					<from>
						<image>amazoncorretto:21.0.3</image>
					</from>
					<to>
						<image>${ezbuy-notification-service.image}:${ezbuy-notification-service.tag}</image>
					</to>
					<container>
						<jvmFlags>
							<jvmFlag>-Dspring.profiles.active=pro</jvmFlag>
						</jvmFlags>
					</container>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
