<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd/MM/yy HH:mm:ss}|%X{traceId}|%m%n"/>
        </Console>
        <Socket name="Remote" host="logstash.myviettel.svc.cluster-tmdt-vtt" port="8020" protocol="UDP">
            <PatternLayout pattern="%p %X{traceId} %c [%M:%L] - %msg%n"/>
        </Socket>
        <Socket name="RemotePerf" host="logstash.myviettel.svc.cluster-tmdt-vtt" port="8021" protocol="UDP">
            <PatternLayout
                    pattern="%p %msg%n"/>
        </Socket>
        <Console name="ConsolePerf" target="SYSTEM_OUT" follow="true">
            <PatternLayout
                    pattern="%p %X{traceId} %X{msisdn} %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <AsyncRoot level="info" includeLocation="true">
            <AppenderRef ref="Console"/>
        </AsyncRoot>
        <Logger name="perfLogger" additivity="false">
            <AppenderRef ref="ConsolePerf"/>
        </Logger>
    </Loggers>
</Configuration>
