<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd/MM/yy HH:mm:ss}|%X{traceId}|%m%n"/>
        </Console>
        <Socket name="Remote" host="sme-logstash-svc.bu-order.svc" port="8200" protocol="UDP">
            <PatternLayout pattern="%p %X{traceId} %c [%M:%L] - %msg%n"/>
        </Socket>
        <Socket name="RemotePerf" host="sme-logstash-svc.bu-order.svc" port="8201" protocol="UDP">
            <PatternLayout
                    pattern="%p %msg%n"/>
        </Socket>
        <Console name="ConsolePerf" target="SYSTEM_OUT" follow="true">
            <PatternLayout
                    pattern="%p %X{traceId} %X{msisdn} %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <AsyncRoot level="info" includeLocation="true">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="Remote"/>
        </AsyncRoot>
        <Logger name="perfLogger" additivity="false">
            <AppenderRef ref="RemotePerf"/>
            <AppenderRef ref="ConsolePerf"/>
        </Logger>
    </Loggers>
</Configuration>
